pipeline {
    agent any

    tools {
        dockerTool "Dockertool" 
    }

    stages {
        stage('Descargar CÃ³digo') {
            steps {
                checkout scm 
            }
        }

        stage('Construir Imagen Docker') {
            steps {
                // Usamos el Dockerfile con Nginx para tus HTML
                sh 'docker build -t hola-mundo-node:latest .'
            }
        }

        stage('Desplegar PayPhone') {
            steps {
                sh '''
                    docker stop hola-mundo-node || true
                    docker rm hola-mundo-node || true
                    docker run -d --name hola-mundo-node -p 80:80 hola-mundo-node:latest
                '''
            }
        }
    }
}